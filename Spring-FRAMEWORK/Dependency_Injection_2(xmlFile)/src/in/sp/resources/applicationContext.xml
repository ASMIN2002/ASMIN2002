<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="in.sp.beans.Address" id="addr">
		<constructor-arg value="121" />
		<constructor-arg value="HYDERABAD" />
		<constructor-arg value="500036" />


	</bean>

	<bean class="in.sp.beans.Student" id="stdid">
		<constructor-arg value="100" />
		<constructor-arg value="ASMIN" />
		<constructor-arg ref="addr" />


	</bean>
</beans>